#run-test osgDB : _osgDB test/osgDB/test.py ;
#run-test osgGA : _osgGA test/osgGA/test.py ;
#run-test osgViewer : _osgViewer test/osgViewer/test.py ;
#run-test all : _osg _osgDB _osgGA _osgViewer test/test-all.py ;
